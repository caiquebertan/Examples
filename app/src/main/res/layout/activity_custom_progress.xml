<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.examples.caique.examplesproject.viewexamples.progressCustom.CustomProgressActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llVProgresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vProgress1"
                android:layout_width="0px"
                android:layout_height="20dp"
                android:background="#f00" />

            <View
                android:id="@+id/vProgress2"
                android:layout_width="0px"
                android:layout_height="20dp"
                android:background="#0f0" />

            <View
                android:id="@+id/vProgress3"
                android:layout_width="0px"
                android:layout_height="20dp"
                android:background="#00f" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvProgressValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="20dp"
            android:text="teste" />
        <!--android:layout_toEndOf="@+id/llVProgresses"-->
        <!--android:layout_toRightOf="@+id/llVProgresses" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llVProgresses2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vProgress12"
                android:layout_width="0px"
                android:layout_height="20dp"
                android:background="#f00" />

            <View
                android:id="@+id/vProgress22"
                android:layout_width="0px"
                android:layout_height="20dp"
                android:background="#0f0" />

            <View
                android:id="@+id/vProgress32"
                android:layout_width="0px"
                android:layout_height="20dp"
                android:background="#00f" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvProgressValue2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="20dp"
            android:text="0" />
    </LinearLayout>

</LinearLayout>
